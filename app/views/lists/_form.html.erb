<%= form_with(model: model, local: true, class: 'form') do |form| %>
  <% if list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
        <% list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form__input">
    <%= form.label :name, class: 'form__label' %>
    <%= form.text_field :name, placeholder: 'Unicorn Tokens', class: 'form__field' %>
  </div>

  <div class="form__input">
    <%= form.label :description, 'Description (optional)', class: 'form__label' %>
    <%= form.text_area :description, class: 'form__field form__field_multiline' %>
  </div>

  <div class="form__input">
    <%= form.label :project_url, 'Project URL (optional)', class: 'form__label' %>
    <%= form.text_field :project_url, 
      placeholder: 'http://example.com',
      class: 'form__field' %>
  </div>

  <%= form.submit nil, class: 'form__submit-button button' %>
<% end %>
