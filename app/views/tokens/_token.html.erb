<div class="token">
  <div class="token__content">
    <div class="token__content-visual token__content-visual_<%= modifier_for_visual(token) %>" 
         style="<%= styles_for_visual(token) %>">
      <% case token.type %>
      <% when 'FontSize' %>
        Waves flung themselves at the blue evening.
      <% when 'Spacing' %>
        <% 10.times do %>
          <div class="token__content-visual-box"></div>
        <% end %>
      <% end %>
    </div>
    <div class="token__content-labels">
      <h3 class="token__value"><%= token.value %></h3>
      <p class="token__name"><%= token.name %></p>
    </div>
  </div>
  <div class="pill-actions">
    <%= link_to 'Edit', edit_token_path(token), class: 'pill-actions__item' %>
    <%= link_to 'Delete', token_path(token),
                method: :delete, class: 'pill-actions__item' %>
  </div>
</div>

