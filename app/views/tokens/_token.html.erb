<div class="token">
  <div class="token__content">
    <div class="<%= classes_for_visual(token) %>" style="<%= styles_for_visual(token) %>"></div>
    <div class="token__content-labels">
      <h3 class="token__value"><%= token.value %></h3>
      <p class="token__name"><%= token.name %></p>
    </div>
  </div>
  <div class="pill-actions">
    <%= link_to 'Edit', edit_token_path(token), class: 'pill-actions__item' %>
    <%= link_to 'Delete', token_path(token),
                method: :delete, class: 'pill-actions__item' %>
  </div>
</div>

